<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Express Forms</title>
    <link rel="stylesheet" href="main.css">
  </head>
  <body>
    <div class="container">

        <div class="">
          {{#failure}} <p>{{.}}</p> {{/failure}}
          {{#success}} <p>{{.}}</p> {{/success}}
        </div>
        <div class="cls_input">
          <form action="/index" method="post">
          <input type="text" name="todo" value="" placeholder="Add a todo">
          <button type="submit">Add todo</button>
          </form>
        </div>

        <div class="container">
            <p><b>Completed Tasks</b></p><hr>
            <ul>
              <li>
              {{#list}}{{#completed}}
                  <form action="/index/{{id}}/delete" method="post">
                    {{task}}<button type="submit">DELETE</button>
                  </form>
              {{/completed}}{{/list}}
              </li>
            </ul>
            <p><b>Incomplete Tasks</b></p><hr>
            <ul>
              <li>
              {{#list}}{{^completed}}
                <form action="/index/{{id}}/update" method="post">
                  {{task}}<button type="submit" name="btnComplete">Mark as complete</button>
                </form>
               {{/completed}}{{/list}}
              </li>
            </ul>
        </div>
    </div>
  </body>
</html>
